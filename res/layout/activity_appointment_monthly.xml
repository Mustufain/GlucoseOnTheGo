<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/appointmentMonthlyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/ic_time_back"
            android:gravity="center"
            android:padding="10dp"
            android:text="14:00"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/curryear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="year"
            android:textColor="@color/black" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.54"
            android:columnCount="4"
            android:rowCount="7"
            android:useDefaultMargins="false" >

            <Button
                android:id="@+id/button1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_row="0"
                android:background="@drawable/ic_time_back"
                android:gravity="center"
                android:onClick="ShowMonthlyView"
                android:text="Jan"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button11"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="2"
                android:layout_gravity="left|fill_vertical"
                android:layout_row="3"
                android:background="@color/lightgrey"
                android:gravity="center"
                android:text="Nov"
                android:onClick="ShowMonthlyView"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button10"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="3"
                android:background="@color/lightgrey"
                android:gravity="center"
                android:text="Oct"
                android:onClick="ShowMonthlyView"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="2"
                android:layout_gravity="left|top"
                android:layout_row="1"
                android:background="@color/lightgrey"
                android:gravity="center"
                android:text="May"
                android:onClick="ShowMonthlyView"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="2"
                android:layout_gravity="left|top"
                android:layout_row="0"
                android:background="@drawable/ic_time_back"
                android:gravity="center"
                android:text="Feb"
                android:onClick="ShowMonthlyView"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="2"
                android:background="@color/white"
                android:gravity="center"
                android:text="Jul"
                android:onClick="ShowMonthlyView"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="2"
                android:layout_gravity="left|top"
                android:layout_row="2"
                android:background="@color/white"
                android:gravity="center"
                android:text="Aug"
                android:onClick="ShowMonthlyView"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_gravity="left|fill_vertical"
                android:layout_row="1"
                android:background="@color/lightgrey"
                android:gravity="center"
                android:text="Apr"
                android:onClick="ShowMonthlyView"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="3"
                android:layout_gravity="left|top"
                android:layout_row="0"
                android:background="@drawable/ic_time_back"
                android:gravity="center"
                android:text="Mar"
                android:onClick="ShowMonthlyView"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="3"
                android:layout_gravity="left|top"
                android:layout_row="1"
                android:background="@color/lightgrey"
                android:gravity="center"
                android:text="Jun"
                android:onClick="ShowMonthlyView"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button9"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="3"
                android:layout_gravity="left|top"
                android:layout_row="2"
                android:background="@color/white"
                android:gravity="center"
                android:text="Sep"
                android:onClick="ShowMonthlyView"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button12"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="3"
                android:layout_gravity="left|fill_vertical"
                android:layout_row="3"
                android:background="@color/lightgrey"
                android:gravity="center"
                android:text="Dec"
                android:onClick="ShowMonthlyView"
                android:textColor="@color/black" />
        </GridLayout>

        <LinearLayout
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/ic_white"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Monthly View"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_previous"
                android:gravity="center"
                android:onClick="onClick_Previous" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_background_white"
                android:gravity="center"
                android:onClick="onClick_Home"
                android:padding="5dp"
                android:text="Home"
                android:textColor="@color/black" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_next"
                android:gravity="center"
                android:onClick="onClick_Next" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>