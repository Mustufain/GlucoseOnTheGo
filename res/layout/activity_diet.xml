<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.saad.theglucoseonthego.DietActivity" >

    <Button
        android:id="@+id/dietTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/ic_time_back"
        android:gravity="center"
        android:padding="10dp"
        android:text="14:00"
        android:textStyle="bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@drawable/custom_background_red_"
        android:gravity="center"
        android:text="Diet Recommendation" />

    <RadioGroup
        android:id="@+id/radioGroupMaleFemale"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/radioButtonMale"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radioButtonMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male" />

        <RadioButton
            android:id="@+id/radioButtonFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/ic_white"
            android:gravity="center"
            android:text="Breakfast"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/Breakfast"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/ic_white"
            android:gravity="center"
            android:hint="Enter Breakfast"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/etBreakfast"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/ic_white"
            android:gravity="center"
            android:hint="Enter cals"
            android:inputType="number"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/ic_white"
            android:gravity="center"
            android:text="Lunch"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/Lunch"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/ic_white"
            android:gravity="center"
            android:hint="Enter Lunch"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/etLunch"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/ic_white"
            android:gravity="center"
            android:hint="Enter cals"
            android:inputType="number"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/ic_white"
            android:gravity="center"
            android:text="Snacks"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/Snacks"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/ic_white"
            android:gravity="center"
            android:hint="Enter Snacks"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/etSnacks"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/ic_white"
            android:gravity="center"
            android:hint="Enter cals"
            android:inputType="number"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/ic_white"
            android:gravity="center"
            android:text="Dinner"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/Dinner"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/ic_white"
            android:gravity="center"
            android:hint="Enter Dinner"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/etDinner"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/ic_white"
            android:gravity="center"
            android:hint="Enter cals"
            android:inputType="number"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/ic_white"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick_Save"
                android:text="Save" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/ic_white"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick_Home"
                android:text="Home"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDietStatus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvDietStatus"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/ic_white"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvExtraCalories"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/ic_right"
                android:clickable="true"
                android:textColor="@color/yellow"
                android:gravity="center"
                android:onClick="onClick_Exercise" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvTotalCalories"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/ic_white"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick_Total"
                android:text="Total Calories"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_Previous"
            android:src="@drawable/ic_previous" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_Next"
            android:src="@drawable/ic_next" />

    </LinearLayout>

</LinearLayout>