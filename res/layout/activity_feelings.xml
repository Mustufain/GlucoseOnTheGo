<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/back"
    android:orientation="vertical" >

    <Button
        android:id="@+id/home_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/ic_time_back"
        android:padding="10dp"
        android:text="Time"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="225dp"
        android:layout_height="231dp"
        android:layout_gravity="center_horizontal|center"
        android:columnCount="4"
        android:rowCount="4" >

        <ImageButton
            android:id="@+id/ImageButton00"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:src="@drawable/cry" />

        <ImageButton
            android:id="@+id/ImageButton01"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:src="@drawable/veryupset" />

        <ImageButton
            android:id="@+id/ImageButton02"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:src="@drawable/upset" />

        <ImageButton
            android:id="@+id/ImageButton03"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:src="@drawable/nointerest" />

        <ImageButton
            android:id="@+id/ImageButton04"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:src="@drawable/weak" />

        <ImageButton
            android:id="@+id/ImageButton05"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:src="@drawable/totallysurprised" />

        <ImageButton
            android:id="@+id/ImageButton06"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:src="@drawable/good" />

        <ImageButton
            android:id="@+id/ImageButton07"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:src="@drawable/enjoying" />

        <ImageButton
            android:id="@+id/ImageButton08"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:src="@drawable/studious" />

        <ImageButton
            android:id="@+id/ImageButton09"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:src="@drawable/yawning" />

        <ImageButton
            android:id="@+id/ImageButton10"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:src="@drawable/fit" />

        <ImageButton
            android:id="@+id/ImageButton11"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:src="@drawable/bored" />

        <ImageButton
            android:id="@+id/ImageButton12"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:src="@drawable/worry" />

        <ImageButton
            android:id="@+id/ImageButton13"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:src="@drawable/strong" />

        <ImageButton
            android:id="@+id/ImageButton14"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:src="@drawable/surprised" />

        <ImageButton
            android:id="@+id/ImageButton15"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:src="@drawable/smart" />
    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.42" >

        <TextView
            android:layout_width="117dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:background="@drawable/custom_background_white"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick_Add"
            android:text="Add"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:background="@drawable/custom_background_white"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick_Home"
            android:text="Home"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>