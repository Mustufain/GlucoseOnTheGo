<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context="com.saad.theglucoseonthego.NewEntryActivity" >

        <Button
            android:id="@+id/newEntryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/ic_time_back"
            android:gravity="center"
            android:padding="10dp"
            android:text="14:00"
            android:textColorLink="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom_background_red_"
            android:gravity="center"
            android:text="New Entry Log"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/ic_socialmedia"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick_Share"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/ic_glu"
                android:gravity="center"
                android:text="Blood Glucose"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etBloodGlucose"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/ic_white"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textColorLink="@color/black" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="mmol/l"
                android:textColor="@color/black"
                android:textColorLink="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/ic_yellow"
                android:gravity="center"
                android:text="Basal Insulin"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etBasalInsulin"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/ic_white"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textColorLink="@color/black" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="units"
                android:textColor="@color/black"
                android:textColorLink="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/ic_green"
                android:gravity="center"
                android:text="Bolus Insulin"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etBolus"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/ic_white"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textColorLink="@color/black" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="units"
                android:textColor="@color/black"
                android:textColorLink="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/ic_blue"
                android:gravity="center"
                android:text="Carbohydrates"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etCarbohydrates"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/ic_white"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textColorLink="@color/black" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="grams"
                android:textColor="@color/black"
                android:textColorLink="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/ic_purple"
                android:gravity="center"
                android:text="Caloried"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etCaloried"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/ic_white"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textColorLink="@color/black" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="cals"
                android:textColor="@color/black"
                android:textColorLink="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/ic_weight"
                android:gravity="center"
                android:text="Weight"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etWeight"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/ic_white"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textColorLink="@color/black" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="Kilos/st/lbs"
                android:textColor="@color/black"
                android:textColorLink="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/ic_ketones"
                android:gravity="center"
                android:text="Ketones"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etKetones"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/ic_white"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textColorLink="@color/black" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="mmol/l"
                android:textColor="@color/black"
                android:textColorLink="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSmile"
            android:layout_width="fill_parent"
            android:layout_height="29dp"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/transparent" />

            <TextView
                android:id="@+id/feeling"
                android:layout_width="113dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_margin="2dp"
                android:background="@drawable/ic_note"
                android:gravity="center"
                android:text="Feeling"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/note"
                android:layout_width="118dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:background="@drawable/ic_note"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick_Note"
                android:text="Note"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick_Previous"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/ic_previous" />

            <TextView
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/custom_background_white"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick_Save"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Save"
                android:textColor="@color/black"
                android:textColorLink="@color/black" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="0.77"
                android:background="@drawable/custom_background_white"
                android:clickable="true"
                android:gravity="center_horizontal|center"
                android:onClick="onClick_Home"
                android:paddingLeft="10dp"
                android:text="Home"
                android:textColor="@color/black"
                android:textColorLink="@color/black" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick_Next"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/ic_next" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>